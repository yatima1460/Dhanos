{
  "name": "dhanos",
  "authors": ["yatima1460"],
  "copyright": "Copyright Â© 2019, yatima1460",
  "description": "Universal D webview UI library",
  "license": "GPL-2.0",
  
  "libs-windows": [
   "libcmt",
    "User32",
    "ole32",
    "kernel32",
    "shell32",
    "Gdi32",
    "Userenv",
    "uuid",
    "advapi32",
    "oleaut32",
    "comctl32"
  ],
  "targetType": "library",
  "sourceFiles": ["Dhanos/DhanosInterface.d","Dhanos/Dhanos.d"],
  "sourceFiles-linux": 
  [
    "$PACKAGE_DIR/ultralight-sdk-1.0-linux.tar/bin/linux/libAppCore.so",
    "$PACKAGE_DIR/ultralight-sdk-1.0-linux.tar/bin/linux/libUltralight.so",
    "$PACKAGE_DIR/ultralight-sdk-1.0-linux.tar/bin/linux/libUltralightCore.so",
    "$PACKAGE_DIR/ultralight-sdk-1.0-linux.tar/bin/linux/libWebCore.so",
    "Dhanos/Dhanos_Linux.d"
  ],
  "sourceFiles-windows": ["Dhanos/Dhanos_Windows.d"],
	"buildTypes": {
		"debug": {
			"buildOptions": [
				"debugMode",
				"debugInfo",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release-debug": {
			"buildOptions": [
				"optimize",
				"debugInfo",
				"inline",
				"stackStomping",
				"alwaysStackFrame"
			]
		},
		"release": {
			"buildOptions": [
				"optimize",
				"inline",
				"noBoundsCheck",
				"releaseMode"
			]
		}
  },
  "copyFiles-linux": [
    "$PACKAGE_DIR/ultralight-sdk-1.0-linux.tar/bin/linux/*.so",
    "www/*.*"
  ],
  "targetPath": "Build/",
  "toolchainRequirements": {
    "dmd": ">=2.086.0",
    "gdc": "no",
    "ldc": ">=1.15.0"
  }
}
