	"description": "Universal D webview UI library",
	"license": "GPL-2.0",
	
	"libs-posix": [

		"gtk+-3.0",
		"webkit2gtk-4.0"
	  ],
	"targetType": "library",
	"preBuildCommands-linux":
	[
		"echo PACKAGE_DIR=$PACKAGE_DIR",
		"gcc -c $PACKAGE_DIR/Source/webview.c -DWEBVIEW_GTK=1 -DWEBVIEW_IMPLEMENTATION `pkg-config --cflags --libs gtk+-3.0 webkit2gtk-4.0` -o $PACKAGE_DIR/webview.o",
		"echo webview.c compiled"
	],

	"sourceFiles": [
		"webview.o",
		"Source/Dhanos.d"
	]

}